<div class="page-header">
  <h1>
    Vehicles
    <a href="/vehicles/new" class="btn btn-lg btn-success">New Vehicle</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "vehicles_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :nickname_cont, "Nickname contains" %>
    <%= f.text_field :nickname_cont, :class => "form-control", :placeholder => "Nickname contains" %>
  </div>

<div class="form-group">
    <%= f.label :license_plate_cont, "License plate contains" %>
    <%= f.text_field :license_plate_cont, :class => "form-control", :placeholder => "License plate contains" %>
  </div>

<div class="form-group">
    <%= f.label :color_cont, "Color contains" %>
    <%= f.text_field :color_cont, :class => "form-control", :placeholder => "Color contains" %>
  </div>

<div class="form-group">
    <%= f.label :model_cont, "Model contains" %>
    <%= f.text_field :model_cont, :class => "form-control", :placeholder => "Model contains" %>
  </div>

<div class="form-group">
    <%= f.label :make_cont, "Make contains" %>
    <%= f.text_field :make_cont, :class => "form-control", :placeholder => "Make contains" %>
  </div>

<div class="form-group">
    <%= f.label :year_cont, "Year contains" %>
    <%= f.text_field :year_cont, :class => "form-control", :placeholder => "Year contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :vehicle_owner_username_cont, "User username contains" %>
      <%= f.text_field :vehicle_owner_username_cont, :class => "form-control", :placeholder => "User username contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/vehicles" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#vehicles_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Year</th>
        <th>Make</th>
        <th>Model</th>
        <th>Color</th>
        <th>License plate</th>
        <th>Nickname</th>
        <th>Actions</th>
      </tr>

      <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.year %></td>
        <td><%= vehicle.make %></td>
        <td><%= vehicle.model %></td>
        <td><%= vehicle.color %></td>
        <td><%= vehicle.license_plate %></td>
        <td><%= vehicle.nickname %></td>
        <td>
          <a href="/vehicles/<%= vehicle.id %>" class="btn btn-primary">Show</a>
          <a href="/vehicles/<%= vehicle.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_vehicle/<%= vehicle.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @vehicles, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
