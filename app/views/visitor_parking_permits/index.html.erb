<div class="page-header">
  <h1>
    Visitor Parking Permits&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <a href="/visitor_parking_permits/new" class="btn btn-md btn-success">Activate a New Permit</a>
  </h1>
</div>
 
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th class="col-sm-4">Valid block</th>
        <th class="col-sm-3">Valid beginning</th>
        <th class="col-sm-3">Expires</th>
        <th class="col-sm-2"></th>
      </tr>
 
      <% @visitor_parking_permits.each do |visitor_parking_permit| %>
      <tr>
        <td> 
        
          <% if current_user.id == visitor_parking_permit.resident %>
            <a href="/users/<%= visitor_parking_permit.resident.id %>">
              <%= visitor_parking_permit.resident.address_formatted_address %>
            </a>
          <% end %>
        </td>
        <td><%= visitor_parking_permit.valid_date.strftime("%A, %B %-d, %Y") %></td>
        <td><%= visitor_parking_permit.expiration_date.strftime("%A, %B %-d, %Y") %></td>
        <td>
          <a href="/visitor_parking_permits/<%= visitor_parking_permit.id %>" class="btn btn-primary">Show Details</a>
          
          <!--<#% if current_user == visitor_parking_permit.resident %>-->
          <!--  <a href="/visitor_parking_permits/<%= visitor_parking_permit.id %>/edit" class="btn btn-warning">Edit</a>-->
          <!--  <a href="/delete_visitor_parking_permit/<%= visitor_parking_permit.id %>" class="btn btn-danger" rel="nofollow">Delete</a>-->
          <!--<#% end %>-->
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @visitor_parking_permits, theme: 'twitter-bootstrap-4' %>

<br/>
  
<div class="page-header">
  <h1>
    Resident Parking Permits&nbsp;&nbsp;
    <a href="/resident_parking_permits/new" class="btn btn-md btn-success">Activate a New Permit</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th class="col-sm-4">Vehicle</th>
        <th class="col-sm-3">Valid date</th>
        <th class="col-sm-3">Expiration date</th>
        <th class="col-sm-2"></th>
      </tr>

      <% @resident_parking_permits.each do |resident_parking_permit| %>
      <tr>
        <td>
          <% if resident_parking_permit.resident_vehicle.present? %>
            <a href="/vehicles/<%= resident_parking_permit.resident_vehicle.id %>">
              <%= resident_parking_permit.resident_vehicle.nickname %>
            </a>
          <% end %>
        </td>
        <td><%= resident_parking_permit.valid_date.strftime("%A, %B %-d, %Y") %></td>
        <td><%= resident_parking_permit.expiration_date.strftime("%A, %B %-d, %Y") %></td>
        <td>
          <a href="/resident_parking_permits/<%= resident_parking_permit.id %>" class="btn btn-primary">Show Details</a>
          
 
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @resident_parking_permits, theme: 'twitter-bootstrap-4' %>
  </div>
  
</div>
