<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Vehicle</th>
        <th>Permit</th>
        <th>Start time</th>
        <th>End time</th>
        <th>Actions</th>
      </tr>

      <% @loans.each do |loan| %>
      <tr>
       <% if current_user.id == loan.resident_id %>
        <td>
            <% if loan.vehicle.present? %>
              <a href="/vehicles/<%= loan.vehicle.id %>">
                <%= loan.vehicle.nickname %>
              </a>
            <% end %>
          </td>
          <td>
            <% if loan.visitor_parking_permit.present? %>
              <a href="/visitor_parking_permits/<%= loan.visitor_parking_permit.id %>">
                <%= loan.visitor_parking_permit.resident_id %>
              </a>
            <% end %>
          </td>
          <td><%= loan.start_time.strftime("%A, %B %-d, %Y, %l:%M %P") %></td>
          <td><%= loan.end_time.strftime("%A, %B %-d, %Y, %l:%M %P") %></td>
          <td>
            <!--<a href="/loans/<%= loan.id %>" class="btn btn-primary">Show</a>-->
            <a href="/loans/<%= loan.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_loan/<%= loan.id %>" class="btn btn-danger" rel="nofollow">Revoke</a>
          </td>
        </tr>
        <% else %> 
        <% end %>
      <% end %>
    </table>
    <%= paginate @loans, theme: 'twitter-bootstrap-4' %>
  </div>
